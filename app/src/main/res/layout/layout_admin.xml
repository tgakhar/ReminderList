<com.google.android.material.card.MaterialCardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="12dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/main"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="2dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_adminEmail"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="Shrey Shah"
            android:textStyle="bold"
            android:textSize="24sp"/>

        <ImageView
            android:id="@+id/img_delete"
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/txt_adminEmail"
            android:src="@drawable/ic_baseline_delete_forever_24"
            android:layout_marginTop="15dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_layoutDelete"
            app:layout_constraintTop_toBottomOf="@id/img_delete"
            app:layout_constraintStart_toStartOf="@id/img_delete"
            app:layout_constraintEnd_toEndOf="@id/img_delete"
            android:layout_marginTop="4dp"
            android:text="Delete"
            android:textStyle="bold"
            android:textSize="10sp"/>
        <ImageView
            android:id="@+id/img_disable"
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:layout_constraintStart_toEndOf="@id/img_delete"
            android:layout_marginStart="15dp"
            app:layout_constraintTop_toBottomOf="@id/txt_adminEmail"
            android:src="@drawable/ic_baseline_block_24"
            android:layout_marginTop="15dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_layoutDisable"
            app:layout_constraintTop_toBottomOf="@id/img_disable"
            app:layout_constraintStart_toStartOf="@id/img_disable"
            app:layout_constraintEnd_toEndOf="@id/img_disable"
            android:layout_marginTop="4dp"
            android:text="Disable"
            android:textStyle="bold"
            android:textSize="10sp"/>
        <ImageView
            android:id="@+id/img_reset"
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:layout_constraintStart_toEndOf="@id/img_disable"
            android:layout_marginStart="15dp"
            app:layout_constraintTop_toBottomOf="@id/txt_adminEmail"
            android:src="@drawable/ic_baseline_edit_24"
            android:layout_marginTop="15dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_layoutReset"
            app:layout_constraintTop_toBottomOf="@id/img_reset"
            app:layout_constraintStart_toStartOf="@id/img_reset"
            app:layout_constraintEnd_toEndOf="@id/img_reset"
            android:layout_marginTop="4dp"
            android:text="Reset"
            android:textStyle="bold"
            android:textSize="10sp"/>





    </androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.card.MaterialCardView>

